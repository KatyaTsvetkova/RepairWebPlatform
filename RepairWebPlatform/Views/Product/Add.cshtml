@model AddProductFormModel
@{
    ViewData["Title"] = "Add Product";
}
<form metod="post">
    <div class="row">
        <div class="offset-md-2 col-md-7">
            <h2 class="heading-margin text-center"> Add new product</h2>
           
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter the name">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Condition"></label>
                    <input asp-for="Condition" class="form-control" placeholder="Good,Bad,Need to be repaird...">
                    <span asp-validation-for="Condition" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" placeholder="Sofia,Plovdiv,Varna,Burgas...">
                    <span asp-validation-for="City" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var product in Model.Categories)
                        {
                            <option value="@product.Id">@product.Name</option>
                        }\
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <input id="Button"name="submit" formmethod="post" class="btn btn-primary" type="submit" value="Save" />

         
        </div>
    </div>
</form>